<api xmlns="http://ws.apache.org/ns/synapse" name="TestIterateMediatorJsonBasicFlow" context="/iteratesample1">
        <resource methods="POST" uri-template="/iteratejson1">
            <inSequence>
                <log level="full"/>
                <iterate id="jsonIterator1" expression="json-eval($.students.studentlist)">
                    <target>
                        <sequence>
                            <header name="Content-Type" scope="transport" value="application/json"/>
                            <send>
                                <endpoint>
                                    <http method="POST" uri-template="http://localhost:8280/iteratesample1/echojson1"/>
                                </endpoint>
                            </send>
                        </sequence>
                    </target>
                </iterate>
                <log level="full"/>
            </inSequence>
            <outSequence>
                <aggregate>
                    <completeCondition>
                        <messageCount min="3" max="-1"/>
                    </completeCondition>
                    <onComplete expression="json-eval($)">
                        <log level="full"/>
                        <respond/>
                    </onComplete>
                </aggregate>
            </outSequence>
        </resource>
        <resource methods="POST" uri-template="/echojson1">
            <inSequence>
                <log level="full"/>
                <payloadFactory media-type="json">
                    <format>
                        {"name": "$1", "status":"accepted"}
                    </format>
                    <args>
                        <arg evaluator="json" expression="$.Name"/>
                    </args>
                </payloadFactory>
                <respond/>
            </inSequence>
        </resource>
    </api>