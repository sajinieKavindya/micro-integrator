<api xmlns="http://ws.apache.org/ns/synapse" name="EnrichToPropertyGetJsonandRespondXMLBack" context="/testenrich13">
        <resource methods="POST">
            <inSequence>
                <enrich>
                    <source type="body" clone="true"/>
                    <target type="property" property="XML_BODY"/>
                </enrich>
                <send>
                    <endpoint>
                        <http method="POST" uri-template="http://localhost:8280/testenrich13/echojson"/>
                    </endpoint>
                </send>
            </inSequence>
            <outSequence>
                <enrich>
                    <source type="property" clone="true" property="XML_BODY"/>
                    <target type="body"/>
                </enrich>
                <property name="messageType" value="application/xml" scope="axis2"/>
                <send/>
            </outSequence>
            <faultSequence/>
        </resource>
        <resource methods="POST" uri-template="/echojson">
            <inSequence>
                <log level="full"/>
                <payloadFactory media-type="json">
                    <format>
                        {
                            "Person" : {
                                "Name" : "Alice",
                                "Age"   : 23
                            }
                        }
                    </format>
                    <args/>
                </payloadFactory>
                <respond/>
            </inSequence>
            <outSequence/>
            <faultSequence/>
        </resource>
    </api>