<api xmlns="http://ws.apache.org/ns/synapse" name="EnrichToPropertyGetXMLandRespondJSonBack" context="/testenrich12">
        <resource methods="POST">
            <inSequence>
                <enrich>
                    <source type="body" clone="true"/>
                    <target type="property" property="JSON_BODY"/>
                </enrich>
                <send>
                    <endpoint>
                        <http method="POST" uri-template="http://localhost:8280/testenrich12/echoxml"/>
                    </endpoint>
                </send>
            </inSequence>
            <outSequence>
                <enrich>
                    <source type="property" clone="true" property="JSON_BODY"/>
                    <target type="body"/>
                </enrich>
                <property name="messageType" value="application/json" scope="axis2"/>
                <send/>
            </outSequence>
            <faultSequence/>
        </resource>
        <resource methods="POST" uri-template="/echoxml">
            <inSequence>
                <log level="full"/>
                <payloadFactory media-type="xml">
                    <format>
                        <Persons>
                            <Person1>
                                <Name>Alice</Name>
                                <Age>23</Age>
                            </Person1>
                            <Person2>
                                <Name>Bob</Name>
                                <Age>22</Age>
                            </Person2>
                        </Persons>
                    </format>
                    <args/>
                </payloadFactory>
                <respond/>
            </inSequence>
            <outSequence/>
            <faultSequence/>
        </resource>
    </api>